<h2>Tasks</h2>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
      <li class="list-group-item <%= badge_for(task, "list-group-item-") %>">
        <%= task.name %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to 'Create New Task', new_task_path, class: "btn btn-info" %>
